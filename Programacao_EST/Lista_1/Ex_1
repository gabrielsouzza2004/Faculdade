int main(int argc, char *argv[]) {
	
	int aluno[30];
	int nota[30];
	int i;
	
	for (i=1;i<31;i++){
		printf("Digite a nota do aluno %d: ", i);
		scanf("%d", &nota[i]);
	}
	system("cls");
	for (i=1;i<31;i++){
		printf("Notas aluno %d: %d\n", i, nota[i] );	
	}
	
}
