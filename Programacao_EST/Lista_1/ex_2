#include <stdio.h>
#include <stdlib.h>
#include <stdlib.h>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char *argv[]) {
	
	int aluno[30]; 
	int nota[30];
	int i;
	int quantidade;
	
	
	printf("Digite o numero de alunos: ");
	scanf("%d", &quantidade);
	system("cls"); 
	
	if(quantidade <= 50){
			for (i=1;i<=quantidade;i++){   
		printf("Digite a nota do aluno %d: ", i);  
		scanf("%d", &nota[i]); 
	}
	system("cls"); 
	for (i=1;i<=quantidade;i++){ 
		printf("Notas aluno %d: %d\n", i, nota[i] ); 
	}
	}if( quantidade <= 0){
		printf("ERRO!!! A QUANTIDADE NAO PODE SER MENOR OU IGUAL A ZERO");
			
	}else{
		printf("ERRO!!! A QUANTIDADE NAO PODE SER MAIOR QUE 50");
	}
		
	
	

	
}
