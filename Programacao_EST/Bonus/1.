#include <stdio.h>
#include <stdlib.h>
#include <stdlib.h>


int main(int argc, char *argv[]) {
	
	float nota1[3], nota2[3], nota3[3], media[3];
	int i;
	
	for (i=0;i<3;i++){
		printf("Digite sua nota 1: ");
		scanf("%f", &nota1[i]);
		
	}
	
	for (i=0;i<3;i++){
		printf("Notas: %.2f\n", nota1[i]);
		
	}
	
	for (i=0;i<3;i++){
		printf("Digite sua nota 2: ");
		scanf("%f", &nota2[i]);
		
	}
	for (i=0;i<3;i++){
		printf("Notas: %.2f\n", nota2[i]);
		
	}
	
	for (i=0;i<3;i++){
		media[i]= (nota1[i] + nota2[i])/2;
		printf("Media 1: %.2f\n", media[i]); 
		        	
	}
	
	//Comando para limpar tela system("cls");
	
	return 0;
}
